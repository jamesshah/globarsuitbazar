        <ul class="nav justify-content-between">
          <li class="nav-item">
            <!-- <a href="#" class="nav-link secondary">Admin Panel</a> -->
            <h3>Admin Panel</h3>
          </li>
          <li class="nav-item">
            <form action="/admin/logout" method="get">
              <button class="btn btn-secondary" type="submit">Logout</button>
            </form>
          </li>
        </ul>
      </div>
      <ul
        class="nav nav-pills nav-fill mb-3 mt-3"
        id="pills-tab"
        role="tablist"
      >
        <li class="nav-item" role="presentation">
          <a
            class="nav-link active border border-primary"
            id="call-logs-tab"
            data-toggle="pill"
            href="#call-logs"
            role="tab"
            aria-controls="call-logs"
            aria-selected="true"
            onclick="openPage('call-logs', this)"
            >Call Logs</a
          >
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link border border-primary"
            id="messages-tab"
            data-toggle="pill"
            href="#messages"
            role="tab"
            aria-controls="messages"
            aria-selected="false"
            onclick="openPage('messages', this)"
            >Messages</a
          >
        </li>
      </ul>
    </div>
    <div class="container tab-content" id="pills-tabContent">
      <div
        class="tab-pane fade show active"
        id="call-logs"
        role="tabpanel"
        aria-labelledby="call-logs"
      >
        <div class="table-responsive">
          <table class="table table-stripped" id="log-table">
            <thead class="thead-dark">
              <tr>
                <th>Agent Name</th>
                <th>Customer Name</th>
                <th>Status</th>
                <th>Start Time</th>
                <th>End Time</th>
              </tr>
            </thead>
            <tbody id="logs-data"></tbody>
          </table>
        </div>
      </div>
      <div
        class="tab-pane fade"
        id="messages"
        role="tabpanel"
        aria-labelledby="messages"
      >
        <div class="table-responsive">
          <table id="message-table" class="table">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody id="message-data"></tbody>
          </table>
        </div>
      </div>
    </div>

